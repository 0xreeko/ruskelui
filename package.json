{
  "version": "0.2.13",
  "license": "MIT",
  "bin": {
    "ruskelui": "bin/index.js"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "ruskelui",
  "author": "0xreeko",
  "description": "RuskeUI is a TailwindCSS-based design system for rapid Web3 development in NextJS/React.",
  "homepage": "https://github.com/0xreeko/ruskelui/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xreeko/ruskelui"
  },
  "keywords": [
    "web3",
    "blockchain",
    "react",
    "reactjs",
    "next",
    "nextjs",
    "typescript",
    "tailwind",
    "tailwindcss",
    "ui",
    "ui kit",
    "design",
    "design system",
    "dark mode"
  ],
  "readme": "https://github.com/0xreeko/ruskelui/blob/master/README.md",
  "module": "dist/ruskelui.esm.js",
  "size-limit": [
    {
      "path": "dist/ruskelui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ruskelui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@size-limit/preset-small-lib": "^8.0.0",
    "@storybook/addon-docs": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-draft-wysiwyg": "^1.13.4",
    "@types/react-transition-group": "^4.4.5",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^8.0.0",
    "storybook-addon-state": "^1.0.3",
    "storybook-css-modules": "^1.0.8",
    "tailwindcss": "^3.1.7",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
